{
	"compilerOptions": {
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"target": "es2015",
		"module": "amd",
		"outDir": "dist",
		"lib": ["es2016", "dom"],
		"types": ["googlemaps", "webpack-env", "node", "jasmine"],
		"baseUrl": ".",
	},
	"angularCompilerOptions": {
		"enableResourceInlining": true
	},

	"exclude": ["dist/**/*", "node_modules/**/*", "tests/**/*"]
}
